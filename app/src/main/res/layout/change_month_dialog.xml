<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/change_month_title_text"/>
    <Spinner
        android:id="@+id/change_month_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_month_year_number_picker"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
    </NumberPicker>

    <Button
        android:text="@string/change_month_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_month_dialog_button"
        android:layout_gravity="center"/>

</LinearLayout>